
<div class="container">
  <p id="notice"><%= notice %></p>


  <table class="table table-hover table-bordered table-responsive" style="width:100%">
    <thead>
      <tr>
        <th>Title</th>
        <th>Price</th>
        <th>Description</th>
        <th>Img url</th>

      </tr>
    </thead>

    <tbody style="width:100%">

        <tr>
          <td><%= @item.title %></td>
          <td><%= @item.price %></td>
          <td><%= @item.description %></td>
          <td><%= @item.img_url %></td>

        </tr>

    </tbody>
  </table>

  <%= link_to 'Edit', edit_admin_product_path(@item) %> |
  <%= link_to 'Back', admin_products_path %>
</div>
