<% content_for :title, "Your Leader Profile | SOS Bracelets" %>
<div class="container-fluid" style="padding-top: 37px;">
  <div class="row">
    <div class="col-md-12 no-pad-xs">
      <div class="row login_signup_heading" style="padding:0px;margin:0px;">
        <div class="col-md-12">
          <center><h3 class="heading_text">Leader of <%= @leader.team_profile.name %></h3></center>
        </div>
      </div>
      <div class="jumbotron" style="padding-bottom:1em; background-color: rgba(255,255,255,0.9); border-radius:0 0 1em 1em;">
        <div class="row">
          <div class="col-md-12">
            <center>

              <div class="row">
                <div class="col-xs-12 col-md-3">
                  <div class="form-group">
                    <center>
                      <%= image_tag(@leader.avatar.url(:medium), {id: "team_image",  style: "margin-top: -0.3em;width:220px;height:220px;",class: "img-responsive img-thumbnail img-circle",alt: "User Profile Image"}) %>
                    </center>
                  </div>
                </div>
                <div class="col-xs-12 col-md-9">
                  <div class="row">
                    <div class="form-group">
                      <label class="profile_name"><%= @leader.firstname%> <%= @leader.lastname%></label>
                    </div>
                  </div>
                  <div class="row">
                    <div class="form-group">
                      <% if @leader.gender != nil %>
                        <label class="profile_data"><%= @leader.firstname%></label>
                      <%end%>
                      <% if @leader.gender != nil %>
                        <label class="profile_data">from <%= @leader.firstname%></label>
                      <%end%>
                    </div>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-12">

                  <div class="row">
                    <div class="col-md-3" style="background-color:#229954;color:#F0F0F0;">
                      <div class="btn-group">
                          <h5 class="btn" style="font-family: 'Merriweather', serif;margin:0px 0px 0px 0px;padding-top:15px;text-align:center;float:left;font-size: 1.2em;border-color: #229954; border-radius:0px 0px 0px 0px;color:#F0F0F0;">Personal Detail</h5>
                      </div>
                    </div>
                    <div class="col-md-9">
                    </div>
                  </div>
                  <div class="row jumbotron" style="border-top-left-radius: 0px;border-top-right-radius: 0px;padding:20px 0px 20px 0px;">
                    <div class="col-xs-12 col-md-4">
                      <div class="row">
                        <div class="col-md-4">
                          <%= label_tag :firstname, "First Name",class: "login_signup_label" %>
                        </div>
                        <div class="col-md-8">
                          <label class="login_signup_label" style="color:#82E0AA;"><%= @leader.firstname%></label>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-4">
                          <%= label_tag :gender, "Gender",class: "login_signup_label" %>
                        </div>
                        <div class="col-md-8">
                          <label class="login_signup_label" style="color:#82E0AA;"><%= @leader.gender%></label>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-4">
                          <%= label_tag :eye, "Eye Color",class: "login_signup_label" %>
                        </div>
                        <div class="col-md-8">
                          <label class="login_signup_label" style="color:#82E0AA;"><%= @leader.eye%></label>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-4">
                          <%= label_tag :phone, "Phone",class: "login_signup_label" %>
                        </div>
                        <div class="col-md-8">
                          <label class="login_signup_label" style="color:#82E0AA;"><%= @leader.code%></label>
                          <label class="login_signup_label" style="color:#82E0AA;margin-left:0.3em;"> <%= @leader.phone%></label>
                        </div>
                      </div>
                    </div>

                    <div class="col-xs-12 col-md-4">
                      <div class="row">
                        <div class="col-md-4">
                          <%= label_tag :lastname, "Last Name",class: "login_signup_label" %>
                        </div>
                        <div class="col-md-8">
                          <label class="login_signup_label" style="color:#82E0AA;" for="firstname"><%= @leader.lastname%></label>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-4">
                          <%= label_tag :blood, "Blood Group",class: "login_signup_label" %>
                        </div>
                        <div class="col-md-8">
                          <label class="login_signup_label" style="color:#82E0AA; margin-right: 0.3em;" for="firstname"><%= @leader.blood%></label>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-4">
                          <%= label_tag :height, "Height (feet)",class: "login_signup_label" %>
                        </div>
                        <div class="col-md-8">
                          <label class="login_signup_label" style="color:#82E0AA; margin-right: 0.3em;" for="firstname"><%= @leader.height%></label>
                        </div>
                      </div>
                    </div>

                    <div class="col-xs-12 col-md-4">
                      <div class="row">
                        <div class="col-md-4">
                          <%= label_tag :weight, "Weight (lb)",class: "login_signup_label" %>
                        </div>
                        <div class="col-md-8">
                          <label class="login_signup_label" style="color:#82E0AA; margin-right: 0.3em;" for="firstname"><%= @leader.weight%></label>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-4">
                          <%= label_tag :hair, "Hair Color",class: "login_signup_label" %>
                        </div>
                        <div class="col-md-8">
                          <label class="login_signup_label" style="color:#82E0AA; margin-right: 0.3em;" for="firstname"><%= @leader.hair%></label>
                        </div>
                      </div>
                      <div class="row">
                        <div class="col-md-4">
                          <%= label_tag :dob, "Date of Birth",class: "login_signup_label" %>
                        </div>
                        <div class="col-md-8">
                          <label class="login_signup_label" style="color:#82E0AA; margin-right: 0.3em;" for="firstname"><%= @leader.dob%></label>
                        </div>
                      </div>
                    </div>
                  </div>


                  <div class="row">
                    <div class="col-md-3" style="background-color:#229954;color:#F0F0F0;">
                      <div class="btn-group">
                          <h5 class="btn" style="font-family: 'Merriweather', serif;margin:0px 0px 0px 0px;padding-top:15px;text-align:center;float:left;font-size: 1.2em;border-color: #229954; border-radius:0px 0px 0px 0px;color:#F0F0F0;">Emergency Contacts</h5>
                      </div>
                    </div>
                    <div class="col-md-9">
                    </div>
                  </div>
                  <div class="row jumbotron" style="border-top-left-radius: 0px;border-top-right-radius: 0px;padding:20px 0px 20px 0px;">
                  </div>


                  <div class="row">
                    <div class="col-md-3" style="background-color:#229954;color:#F0F0F0;">
                      <div class="btn-group">
                          <h5 class="btn" style="font-family: 'Merriweather', serif;margin:0px 0px 0px 0px;padding-top:15px;text-align:center;float:left;font-size: 1.2em;border-color: #229954; border-radius:0px 0px 0px 0px;color:#F0F0F0;">Medical Condition</h5>
                      </div>
                    </div>
                    <div class="col-md-9">
                    </div>
                  </div>
                  <div class="row jumbotron" style="border-top-left-radius: 0px;border-top-right-radius: 0px;padding:20px 0px 20px 0px;">
                  </div>


                  <div class="row">
                    <div class="col-md-3" style="background-color:#229954;color:#F0F0F0;">
                      <div class="btn-group">
                          <h5 class="btn" style="font-family: 'Merriweather', serif;margin:0px 0px 0px 0px;padding-top:15px;text-align:center;float:left;font-size: 1.2em;border-color: #229954; border-radius:0px 0px 0px 0px;color:#F0F0F0;">Allergies</h5>
                      </div>
                    </div>
                    <div class="col-md-9">
                    </div>
                  </div>
                  <div class="row jumbotron" style="border-top-left-radius: 0px;border-top-right-radius: 0px;padding:20px 0px 20px 0px;">
                  </div>


                  <div class="row">
                    <div class="col-md-3" style="background-color:#229954;color:#F0F0F0;">
                      <div class="btn-group">
                          <h5 class="btn" style="font-family: 'Merriweather', serif;margin:0px 0px 0px 0px;padding-top:15px;text-align:center;float:left;font-size: 1.2em;border-color: #229954; border-radius:0px 0px 0px 0px;color:#F0F0F0;">Medication</h5>
                      </div>
                    </div>
                    <div class="col-md-9">
                    </div>
                  </div>
                  <div class="row jumbotron" style="border-top-left-radius: 0px;border-top-right-radius: 0px;padding:20px 0px 20px 0px;">
                  </div>


                  <div class="row">
                    <div class="col-md-3" style="background-color:#229954;color:#F0F0F0;">
                      <div class="btn-group">
                          <h5 class="btn" style="font-family: 'Merriweather', serif;margin:0px 0px 0px 0px;padding-top:15px;text-align:center;float:left;font-size: 1.2em;border-color: #229954; border-radius:0px 0px 0px 0px;color:#F0F0F0;">Special Instruction</h5>
                      </div>
                    </div>
                    <div class="col-md-9">
                    </div>
                  </div>
                  <div class="row jumbotron" style="border-top-left-radius: 0px;border-top-right-radius: 0px;padding:20px 0px 20px 0px;">
                  </div>

                </div>
              </div>



              <div class="row">
                <div class="form-group">
                  <div class="col-md-5"></div>
                  <div class="col-md-2">
                    <center>
                      <%= link_to 'Edit Leader Profile', edit_leader_path(:id => @leader.id), class: 'btn btn-block btn-info', style: "font-weight:bold;font-family: 'Merriweather', serif; background-color:#229954;border-color:#229954;margin-top:1em;" %>
                      <br>
                      <br>
                      <%= link_to "Back", leaders_path,class: 'btn btn-block btn-info', style: "font-weight:bold;font-family: 'Merriweather', serif; background-color:#229954;border-color:#229954;" %>
                    </center>
                  </div>
                  <div class="col-md-5"></div>
                </div>
              </div>
            </center>
          </div>
        </div>
      </div>
    </div>
  </div>
