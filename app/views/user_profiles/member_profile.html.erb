<% content_for :title, "Member Profile | SOS Bracelets" %>
<div class="container" style="padding-top: 37px;">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10 no-pad-xs">
      <div class="row login_signup_heading" style="padding:0px;margin:0px;">
        <div class="col-md-12">
            <center><h3 class="heading_text">Member of <%= @team_profile.name%></h3></center>
        </div>
      </div>
      <div class="jumbotron" style="padding-bottom:1em; background-color: rgba(255,255,255,0.9); border-radius:0 0 1em 1em;">
        <div class="row">
          <div class="col-md-12">
            <center>
                <div class="row">
                  <div class="col-xs-12 col-md-4">
                    <div class="form-group">
                      <center>
                        <%= image_tag("user.png", {id: "team_image",  style: "width:220px;height:220px;",class: "img-responsive img-thumbnail img-circle",alt: "User Profile Image"}) %>
                      </center>
                    </div>
                  </div>
                  <div class="col-xs-12 col-md-8">
                    <div class="row">
                      <div class="col-md-4">
                        <%= label_tag :profile_of, "Member of Team",class: "login_signup_label", style:"margin-right: 0.4em;" %>
                      </div>
                      <div class="col-md-8">
                        <%= label_tag :firstname, @team_profile.name,class: "login_signup_label", style:"color:#82E0AA; margin-right: 0.3em;" %>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-4">
                        <%= label_tag :firstname, "Name",class: "login_signup_label", style:"margin-right: 0.4em;" %>
                      </div>
                      <div class="col-md-8">
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-4">
                        <%= label_tag :dob, "Date of Birth",class: "login_signup_label", style:"margin-right: 0.4em;" %>
                      </div>
                      <div class="col-md-8">
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-4">
                        <%= label_tag :phone, "Phone Number",class: "login_signup_label", style:"margin-right: 0.4em;" %>
                      </div>
                      <div class="col-md-8">
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-4">
                        <%= label_tag :gender, "Gender",class: "login_signup_label", style:"margin-right: 0.4em;" %>
                      </div>
                      <div class="col-md-8">
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-4">
                        <%= label_tag :blood, "Blood Group",class: "login_signup_label", style:"margin-right: 0.4em;" %>
                      </div>
                      <div class="col-md-8">
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-4">
                        <%= label_tag :hair, "Hair Color",class: "login_signup_label", style:"margin-right: 0.4em;" %>
                      </div>
                      <div class="col-md-8">
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-4">
                        <%= label_tag :eye, "Eye Color",class: "login_signup_label", style:"margin-right: 0.4em;" %>
                      </div>
                      <div class="col-md-8">
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-4">
                        <%= label_tag :height, "Height",class: "login_signup_label", style:"margin-right: 0.4em;" %>
                      </div>
                      <div class="col-md-8">
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-4">
                        <%= label_tag :weight, "Weight",class: "login_signup_label", style:"margin-right: 0.4em;" %>
                      </div>
                      <div class="col-md-8">
                      </div>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="form-group">
                    <div class="col-md-4"></div>
                    <div class="col-md-4">
                      <center>
                        <%= link_to "Back", team_profile_path(:id => @team_profile.id),class: 'btn btn-block btn-info', style: "font-weight:bold;font-family: 'Merriweather', serif; background-color:#229954;border-color:#229954;" %>
                      </center>
                    </div>
                    <div class="col-md-4"></div>
                  </div>
                </div>
            </center>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-1"></div>
  </div>
</div>
